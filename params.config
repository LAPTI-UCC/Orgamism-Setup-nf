// Define parameters
params {

    base = "results"  // Base output directory for all results

    help = false  // Show help message

    // Method to download genome: 'gget' (Ensembl) or 'url' (custom URL)
    download_method = "gget"

    // Method to obtain rRNA sequences: 'gtf' (extract from genome GTF) or 'silva' (download SILVA database)
    rrna_source = "gtf"

    organism = "Saccharomyces cerevisiae"  
    ensembl_version = '112'
    gget_which = ['dna', 'gtf']  // Types of files to download: 'dna' (genome FASTA), 'gtf' (annotations)

    // =====================================
    // Parameters for 'url' Download Method (Custom URLs)
    // =====================================
    // Uncomment and modify these when using download_method = "url"
    // Example: T2T-CHM13 v2.0 genome
    // organism = "Homo_sapiens_T2T"
    // genome_version = "CHM13v2.0"  // Version string for output directory naming
    // genome_fasta_url = "https://s3-us-west-2.amazonaws.com/human-pangenomics/T2T/CHM13/assemblies/analysis_set/chm13v2.0.fa.gz"
    // genome_gtf_url = "https://ftp.ncbi.nlm.nih.gov/genomes/all/GCF/009/914/755/GCF_009914755.1_T2T-CHM13v2.0/GCF_009914755.1_T2T-CHM13v2.0_genomic.gtf.gz"

    // =====================================
    // Parameters for 'silva' rRNA Source
    // =====================================
    // Uncomment and modify when using rrna_source = "silva"
    // SILVA database URLs for different rRNA types:
    // - SSU (16S/18S): Small subunit rRNA
    // - LSU (23S/28S): Large subunit rRNA
    // silva_url = "https://www.arb-silva.de/fileadmin/silva_databases/release_138_1/Exports/SILVA_138.1_SSURef_NR99_tax_silva.fasta.gz"
    // silva_version = "138.1"
}