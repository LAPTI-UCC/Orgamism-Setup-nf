// Example params.config for Mouse (Mus musculus) using Ensembl
// This demonstrates using gget download method and GTF rRNA extraction

params {
    // =====================================
    // Output Configuration
    // =====================================
    base = "results"  // Base output directory for all results

    help = false  // Show help message

    // =====================================
    // Download Method: gget (Ensembl)
    // =====================================
    download_method = "gget"

    // =====================================
    // rRNA Source: Extract from GTF
    // =====================================
    rrna_source = "gtf"

    // =====================================
    // Organism Information (Ensembl)
    // =====================================
    organism = "Mus musculus"  // Will be normalized to "mus_musculus"
    ensembl_version = '112'    // Ensembl release 112
    gget_which = ['dna', 'gtf']  // Download genome DNA and GTF annotation

    // Other organisms you can try:
    // - "Homo sapiens"             (human)
    // - "Drosophila melanogaster"  (fruit fly)
    // - "Caenorhabditis elegans"   (C. elegans)
    // - "Danio rerio"              (zebrafish)
    // - "Rattus norvegicus"        (rat)
    // - "Gallus gallus"            (chicken)
}

// Output will be created at:
// results/mus_musculus/112/
//   ├── Mus_musculus.GRCm39.dna.primary_assembly.fa  (genome FASTA)
//   ├── Mus_musculus.GRCm39.112.gtf                  (genome GTF)
//   ├── star_index/                                  (STAR index)
//   ├── Mus_musculus.GRCm39.dna.primary_assembly.transcripts.fa  (transcriptome)
//   ├── bowtie_index/                                (transcriptome bowtie index)
//   ├── Mus_musculus.GRCm39.dna.primary_assembly.chrom.sizes     (chromosome sizes)
//   ├── Mus_musculus.GRCm39.112.sqlite               (GTF database)
//   ├── ribometric.tsv                               (RiboMetric annotations)
//   ├── rRNA.fa                                      (extracted rRNA sequences)
//   ├── rRNA_index/                                  (rRNA bowtie index)
//   └── riboseqorg_params.config                     (generated config)
