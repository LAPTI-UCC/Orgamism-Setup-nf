// Example params.config for Zebrafish using NCBI genome and SILVA rRNA
// This demonstrates using URL download with NCBI sources and SILVA database

params {
    // =====================================
    // Output Configuration
    // =====================================
    base = "results"  // Base output directory for all results

    help = false  // Show help message

    // =====================================
    // Download Method: URL (NCBI)
    // =====================================
    download_method = "url"

    // =====================================
    // rRNA Source: SILVA Database
    // =====================================
    rrna_source = "silva"

    // =====================================
    // Organism Information
    // =====================================
    organism = "Danio rerio"  // Zebrafish - will be normalized to "danio_rerio"
    genome_version = "GRCz11"  // NCBI genome assembly version

    // =====================================
    // URL Download Parameters (NCBI)
    // =====================================
    // Zebrafish GRCz11 genome from NCBI
    genome_fasta_url = "https://ftp.ncbi.nlm.nih.gov/genomes/all/GCF/000/002/035/GCF_000002035.6_GRCz11/GCF_000002035.6_GRCz11_genomic.fna.gz"
    genome_gtf_url = "https://ftp.ncbi.nlm.nih.gov/genomes/all/GCF/000/002/035/GCF_000002035.6_GRCz11/GCF_000002035.6_GRCz11_genomic.gtf.gz"

    // =====================================
    // SILVA rRNA Database Parameters
    // =====================================
    // SILVA LSU (23S/28S) database for ribosome profiling
    silva_url = "https://www.arb-silva.de/fileadmin/silva_databases/release_138_1/Exports/SILVA_138.1_LSURef_NR99_tax_silva.fasta.gz"
    silva_version = "138.1"

    // Note: For zebrafish ribosome profiling, you might prefer LSU (28S)
    // SSU (18S) is also available if needed
}

// How to find NCBI genome URLs:
// 1. Go to https://www.ncbi.nlm.nih.gov/genome/
// 2. Search for your organism
// 3. Click on the assembly accession (e.g., GCF_000002035.6)
// 4. Click "Download assemblies" or navigate to the FTP directory
// 5. Copy URLs for *_genomic.fna.gz (FASTA) and *_genomic.gtf.gz (GTF)

// Output will be created at:
// results/danio_rerio/GRCz11/
//   ├── GCF_000002035.6_GRCz11_genomic.fna    (genome FASTA)
//   ├── GCF_000002035.6_GRCz11_genomic.gtf    (genome GTF)
//   ├── star_index/                           (STAR index)
//   ├── transcripts.fa                        (transcriptome)
//   ├── bowtie_index/                         (transcriptome bowtie index)
//   ├── chrom.sizes                           (chromosome sizes)
//   ├── annotation.sqlite                     (GTF database)
//   ├── ribometric.tsv                        (RiboMetric annotations)
//   ├── rRNA.fa                               (SILVA LSU rRNA)
//   ├── rRNA_index/                           (rRNA bowtie index)
//   └── riboseqorg_params.config              (generated config)
