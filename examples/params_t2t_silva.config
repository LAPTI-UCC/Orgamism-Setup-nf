// Example params.config for T2T-CHM13 genome with SILVA rRNA database
// This demonstrates using URL download method and SILVA rRNA source

params {
    // =====================================
    // Output Configuration
    // =====================================
    base = "results"  // Base output directory for all results

    help = false  // Show help message

    // =====================================
    // Download Method: URL (Custom)
    // =====================================
    download_method = "url"

    // =====================================
    // rRNA Source: SILVA Database
    // =====================================
    rrna_source = "silva"

    // =====================================
    // Organism Information
    // =====================================
    organism = "Homo sapiens T2T"  // Will be normalized to "homo_sapiens_t2t"
    genome_version = "CHM13v2.0"   // Version for output directory naming

    // =====================================
    // URL Download Parameters
    // =====================================
    // T2T-CHM13 v2.0 Complete Genome Assembly
    genome_fasta_url = "https://ftp.ebi.ac.uk/pub/ensemblorganisms/Homo_sapiens/GCA_009914755.4/genome/unmasked.fa.gz"
    genome_gtf_url = "https://ftp.ebi.ac.uk/pub/ensemblorganisms/Homo_sapiens/GCA_009914755.4/ensembl/geneset/2022_07/genes.gtf.gz"

    // =====================================
    // SILVA rRNA Database Parameters
    // =====================================
    // SILVA SSU (16S/18S) database - NR99 (non-redundant at 99% identity)
    silva_url = "https://www.arb-silva.de/fileadmin/silva_databases/release_138_1/Exports/SILVA_138.1_SSURef_NR99_tax_silva.fasta.gz"
    silva_version = "138.1"

    // Alternative SILVA databases:
    // LSU (23S/28S): https://www.arb-silva.de/fileadmin/silva_databases/release_138_1/Exports/SILVA_138.1_LSURef_NR99_tax_silva.fasta.gz
    // Latest version (check https://www.arb-silva.de/download/archive/ for updates)
}

// Output will be created at:
// results/homo_sapiens_t2t/CHM13v2.0/
//   ├── chm13v2.0.fa                    (genome FASTA)
//   ├── GCF_009914755.1_*.gtf           (genome GTF)
//   ├── star_index/                     (STAR index)
//   ├── chm13v2.0.transcripts.fa        (transcriptome)
//   ├── bowtie_index/                   (transcriptome bowtie index)
//   ├── chm13v2.0.chrom.sizes           (chromosome sizes)
//   ├── GCF_009914755.1_*.sqlite        (GTF database)
//   ├── ribometric.tsv                  (RiboMetric annotations)
//   ├── rRNA.fa                         (SILVA rRNA sequences)
//   ├── rRNA_index/                     (rRNA bowtie index)
//   └── riboseqorg_params.config        (generated config)
